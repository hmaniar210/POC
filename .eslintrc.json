{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jasmine": true,
    "mocha": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "AuthModule": "readonly",
    "ValidationModule": "readonly",
    "showLogin": "readonly",
    "showForgotPassword": "readonly",
    "showDashboard": "readonly",
    "logout": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": {
        "jasmine": true,
        "mocha": true
      },
      "globals": {
        "Given": "readonly",
        "When": "readonly",
        "Then": "readonly",
        "expect": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly"
      }
    }
  ]
}
